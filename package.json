{
  "name": "standardized-ai-ad-platform",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "author": "Your Name",
  "description": "AI广告平台 - 智能广告素材生成工具",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node ./backend/server.mjs",
    "electron:dev": "concurrently \"npm run dev\" \"npm run server\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "@types/file-saver": "^2.0.7",
    "axios": "^1.13.4",
    "chroma-js": "^3.2.0",
    "clsx": "^2.1.1",
    "colorthief": "^2.6.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "multer": "^1.4.5-lts.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/chroma-js": "^3.1.2",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.ai-platform.app",
    "productName": "AI广告平台",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "!backend/assets/**/*",
      "!backend/data/*.db"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "electron/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "electron/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "electron/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI广告平台"
    }
  }
}